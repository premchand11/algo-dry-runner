{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AlgoDryRunnerExecutionState",
  "type": "object",
  "required": ["meta", "timeline"],

  "properties": {
    "meta": {
      "type": "object",
      "required": ["language", "version", "entry_function"],
      "properties": {
        "language": {
          "type": "string",
          "description": "Programming language used (cpp, python, etc)"
        },
        "version": {
          "type": "string",
          "description": "IR schema version"
        },
        "entry_function": {
          "type": "string",
          "description": "Program entry point"
        }
      }
    },

    "timeline": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/stateSnapshot"
      }
    }
  },

  "definitions": {
    "stateSnapshot": {
      "type": "object",
      "required": ["step", "line", "event", "stack", "heap", "references"],

      "properties": {
        "step": {
          "type": "integer",
          "minimum": 0
        },

        "line": {
          "type": "integer",
          "minimum": 1
        },

        "event": {
          "type": "string",
          "enum": [
            "read",
            "write",
            "call",
            "return",
            "condition",
            "loop-enter",
            "loop-exit",
            "error"
          ]
        },

        "stack": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/stackFrame"
          }
        },

        "heap": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/heapObject"
          }
        },

        "references": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/reference"
          }
        },

        "globals": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/value"
          }
        },

        "stdout": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },

        "annotations": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/annotation"
          }
        }
      }
    },

    "stackFrame": {
      "type": "object",
      "required": ["frame_id", "function", "locals"],
      "properties": {
        "frame_id": {
          "type": "string"
        },
        "function": {
          "type": "string"
        },
        "locals": {
          "type": "object",
          "additionalProperties": {
            "$ref": "#/definitions/value"
          }
        }
      }
    },

    "heapObject": {
      "type": "object",
      "required": ["kind", "datatype"],
      "properties": {
        "kind": {
          "type": "string",
          "description": "array, linked_list, tree, graph, object, etc"
        },
        "datatype": {
          "type": "string"
        },
        "values": {
          "type": "array",
          "items": {}
        },
        "meta": {
          "type": "object"
        }
      }
    },

    "reference": {
      "type": "object",
      "required": ["ref"],
      "properties": {
        "ref": {
          "type": "string",
          "description": "heap object id"
        },
        "index": {
          "type": "integer"
        },
        "field": {
          "type": "string"
        }
      }
    },

    "value": {
      "type": "object",
      "required": ["type", "value"],
      "properties": {
        "type": {
          "type": "string"
        },
        "value": {}
      }
    },

    "annotation": {
      "type": "object",
      "required": ["type", "text"],
      "properties": {
        "type": {
          "type": "string"
        },
        "text": {
          "type": "string"
        }
      }
    }
  }
}
